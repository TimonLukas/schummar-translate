{
  "name": "schummar-translate",
  "repository": "schummar/schummar-translate",
  "version": "1.9.0",
  "description": "TypeScript powered translation library for React and Node.js.",
  "keywords": [
    "typescript",
    "react",
    "node",
    "translation",
    "i18n",
    "localization",
    "type checking",
    "autocomplete",
    "IntelliSense"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/es/index.js"
    },
    "./react": {
      "import": "./dist/es/react.js",
      "require": "./dist/cjs/react.js",
      "default": "./dist/es/react.js"
    }
  },
  "types": "dist/types/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/index.d.ts"
      ],
      "react": [
        "dist/types/react/index.d.ts"
      ]
    }
  },
  "author": {
    "name": "Marco Schumacher",
    "email": "marco@schumacher.dev"
  },
  "license": "MIT",
  "scripts": {
    "start": "runp -f start:*",
    "start:compile": "tsc -p tsconfig-cjs.json --watch",
    "start:example": "npm --prefix example start",
    "build": "runp build:clean :p build:compile:* :s build:cjsPackage",
    "build:clean": "rimraf \"dist/**/*\"",
    "build:compile:js": "vite build",
    "build:compile:types": "tsc",
    "build:cjsPackage": "echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "lint": "runp lint:*",
    "lint:eslint": "eslint src test",
    "lint:tsc": "tsc --noEmit --emitDeclarationOnly false",
    "prepublishOnly": "runp lint test build",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:export": "vitest run --coverage --reporter=verbose --reporter=junit --outputFile=test/testResults.xml"
  },
  "dependencies": {
    "@formatjs/icu-messageformat-parser": "^2.3.0",
    "@formatjs/intl-localematcher": "^0.2.32",
    "intl-messageformat": "^10.3.3"
  },
  "peerDependencies": {
    "@types/react": ">=16.8.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@schummar/runp": "1.12.0",
    "@testing-library/react": "14.0.0",
    "@types/node": "18.15.5",
    "@types/react": "18.0.28",
    "@typescript-eslint/eslint-plugin": "5.56.0",
    "@typescript-eslint/parser": "5.56.0",
    "@vitest/coverage-c8": "0.29.7",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "jsdom": "21.1.1",
    "prettier": "2.8.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "4.4.0",
    "semantic-release": "20.1.3",
    "typescript": "5.0.2",
    "vite": "4.2.1",
    "vitest": "0.29.7"
  },
  "files": [
    "dist",
    "react.d.ts",
    "react.js"
  ],
  "volta": {
    "node": "18.15.0",
    "pnpm": "7.29.3"
  }
}
